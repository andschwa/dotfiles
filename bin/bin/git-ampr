#!/usr/bin/env bash

# `git ampr 103`
# SSH version: git@github.com:x89/Shreddit.git
# HTTPS version: https://github.com/x89/Shreddit.git
# Patch file: https://patch-diff.githubusercontent.com/raw/x89/Shreddit/pull/103.patch
# Sed sucks

url=$(git remote get-url origin | gsed -r "s%(.+[:/])([^/]+/.+)(\\.git)%https://patch-diff.githubusercontent.com/raw/\\2/pull/$1.patch%g")
curl "$url" | git am
